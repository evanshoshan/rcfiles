# Function to decode Kubernetes secret
decode_secret_func() {
    if [[ $# -eq 0 ]]; then
        echo "Usage: decode_secret <secret_name>"
        return 1
    fi
    
    kubectl get secret "$1" -o=json | jq -r '.data | with_entries(.value |= @base64d)'
}

